
@{
    ViewBag.Title = "AddDepartment";
    Layout = "~/Views/Shared/_Layout_Add.cshtml";
}



<!-- Sweet Alert -->
<link href="../plugins/sweet-alert2/sweetalert2.min.css" rel="stylesheet" type="text/css">
<link href="../plugins/animate/animate.css" rel="stylesheet" type="text/css">

<!-- Page-Title -->
<div class="row">
    <div class="col-sm-12">
        <div class="page-title-box">
            <div class="float-right">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="javascript:void(0);">Staff</a></li>
                </ol>
            </div>
            <h4 class="page-title">
                ADD EMAIL CONFIGURATION
            </h4>
        </div><!--end page-title-box-->
    </div><!--end col-->
</div>


<div class="row">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Email From Address</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ex1" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">Email From Name* </label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ex1" type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP HOST*</label>
                            <div class="col-lg-8">
                                <select class="select2 form-control mb-3 custom-select" id="ddlClient" style="width: 100%;">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP Port* </label>
                            <div class="col-lg-8">
                                <select class="select2 form-control mb-3 custom-select" id="ddlClient" style="width: 100%;">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP User Name*</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ex1" type="text">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP Password*</label>
                            <div class="col-lg-8">
                                <input class="form-control" id="ex1" type="text">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP Security</label>
                            <div class="col-lg-8">
                                <select class="select2 form-control mb-3 custom-select" id="ddlClient" style="width: 100%;">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP Authentication Domain*</label>
                            <div class="col-lg-8">
                                <select class="select2 form-control mb-3 custom-select" id="ddlClient" style="width: 100%;">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-12">
                        <div class="form-group row">
                            <label class="col-lg-3 col-form-label">SMTP Require Authentication</label>
                            <div class="col-lg-8">
                                <select class="select2 form-control mb-3 custom-select" id="ddlClient" style="width: 100%;">
                                    <option value="0">Select</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <button class="btn btn-gradient-primary" id="btnSubmit" type="submit">Create</button>
            </div>
        </div>
    </div>
</div>